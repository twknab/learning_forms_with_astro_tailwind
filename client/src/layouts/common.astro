---
const { title } = Astro.props
const url = new URL(Astro.request.url).pathname
---

<style>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer components {
		.nav-link {
			@apply font-medium hover:text-gray-900 text-gray-500;
		}
	}
</style>

<html lang="en">

<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<meta name="viewport" content="width=device-width" />
	<title>{ title }</title>
</head>

<body>
	<div class="py-8 bg-gray-200 min-h-screen">
		<nav class="flex justify-center space-x-10 pb-10">
			<a class={`nav-link ${url === '/' ? 'font-bold' : ''}`} href="/">Home</a>
			<a class={`nav-link ${url === '/pricing' ? 'font-bold' : ''}`} href="/pricing">Pricing</a>
			<a class={`nav-link ${url === '/blog' ? 'font-bold' : ''}`} href="/blog">Blog</a>
			<a class={`nav-link ${url === '/login' ? 'font-bold' : ''}`} href="/login">Login</a>
			<a class="nav-link hover:bg-blue-600 text-white bg-blue-500 px-3 py-2 -mt-2 rounded-lg" href="/signup">Sign up</a>
		</nav>
		<h1 class="text-center text-3xl mb-10 font-extrabold tracking-tight text-gray-900">
			{ title }
		</h1>
		<div class="mt-20 mx-auto text-center max-w-3xl px-10">
			<slot />
		</div>
		<footer class="mt-20 pt-12 border-t-2 border-gray-300">
			<nav class="flex justify-center pb-10 space-x-10">
				<a href="/" class="font-medium text-gray-500 hover:text-gray-900">Home</a>
				<a href="/pricing" class="font-medium text-gray-500 hover:text-gray-900">Pricing</a>
				<a href="/blog" class="font-medium text-gray-500 hover:text-gray-900">Blog</a>
			</nav>
			<p class="text-center text-gray-400">
				&copy; 2022 Greatest Tool. All rights reserved.
			</p>
		</footer>
	</div>
</body>

</html>